<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0"
	id="apps.blueware.co.za/SAMMobile" version="0.5.6">

	<name short="SAM Mobile">SAMMobile</name>

	<gap:platform name="ios" />
	<gap:platform name="android" />
	<gap:platform name="winphone" />
	
	<gap:plugin name="com.phonegap.plugin.statusbar" />

	<preference name="permissions" value="none" />
	
	<preference name="exit-on-suspend" value="true" />
	
	<preference name="StatusBarOverlaysWebView" value="false" />
	
	<description>
		SAMMobile brings your company's Software Development Lifecycle (SDLC) to your mobile device. It makes otherwise tedious tasks like progress feedback and time sheet capture a lot more convenient for you.
		Note: This application requires a connection to a SAM application server.		
	</description>

	<author href="http://www.blueware.co.za/" email="info@blueware.co.za">BlueWare Software Solutions</author>
	
